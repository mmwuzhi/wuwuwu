  "dependencies": {
    "@code-hike/mdx": "^0.8.0",
    "@mdx-js/loader": "^2.3.0",
    "@mdx-js/react": "^2.3.0",
    "axios": "^1.2.1",
    "click-to-react-component": "^1.0.8",
    "dayjs": "^1.11.6",
    "esbuild": "~0.12.29",
    "gray-matter": "^4.0.3",
    "mdx-bundler": "^9.2.1",
    "next": "13.2.3",
    "nprogress": "^0.2.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-query": "^3.39.2",
    "shiki": "^0.14.1",
    "styled-components": "^5.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
