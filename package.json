    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.0",
    "typescript": "^4.9.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint",
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "bash -c 'pnpm type-check'"
    ],
    "*.{yml,yaml,json,css,scss}": [
      "prettier --write"
    ],
    "**/*.{md,mdx}": [
      "node updateFrontmatter"
    ]
  }
}
